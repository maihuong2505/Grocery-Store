<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4E1E1"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#EFBDBD"
            app:titleTextColor="@color/white">

            <ImageButton
                android:id="@+id/backbtn1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp"
                android:text="Đổi mật khẩu"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/txtPwd"
            android:background="@drawable/corner_edittext"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtNewpwd"
            android:background="@drawable/corner_edittext"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtConfirmpwd"
            android:background="@drawable/corner_edittext"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="Xác nhận mật khẩu mới"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:id="@+id/btnSave"
            android:layout_gravity="center"
            android:backgroundTint="#E61A1A"
            android:text="Lưu thay đổi"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>