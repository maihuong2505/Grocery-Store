<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="371dp"
            android:layout_marginBottom="691dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="177dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="16dp"
            android:text="Designed by Mai Huong"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnresetpwd"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/newpwd"
            android:layout_width="257dp"
            android:layout_height="34dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="76dp"
            android:background="@drawable/corner_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:password="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="79dp"
            android:layout_marginTop="197dp"
            android:layout_marginEnd="77dp"
            android:fontFamily="sans-serif-thin"
            android:text="RESET PASSWORD"
            android:textColor="#ED5E5E"
            android:textColorHighlight="#F3E8E8"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="sans-serif-black"
            android:text="New Password:"
            android:textColor="#FBFBFB"
            android:textColorHighlight="#FAF8F8"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="177dp"
            android:fontFamily="sans-serif-black"
            android:text="Confirm Password:"
            android:textColor="#FBFBFB"
            android:textColorHighlight="#FAF8F8"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/cfnewpwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newpwd"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnresetpwd"
            android:layout_width="280dp"
            android:layout_height="39dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="67dp"
            android:fontFamily="sans-serif-black"
            android:text="RESET PASSWORD"
            app:backgroundTint="#F6C6C6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cfnewpwd"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/cfnewpwd"
            android:layout_width="255dp"
            android:layout_height="37dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/corner_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:password="true"
            app:layout_constraintBottom_toTopOf="@+id/btnresetpwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>