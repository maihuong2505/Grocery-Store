<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keyboard">

    <ImageButton
        android:id="@+id/backbtn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="371dp"
        android:layout_marginBottom="691dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="ĐĂNG KÝ"
        android:textColor="#F6A1A1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:background="@drawable/corner_edittext"
        android:hint="Họ"
        android:inputType="textPersonName"
        android:textColor="#161C42"
        android:textColorHint="#FF6C6868"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toStartOf="@+id/lastname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Tên"
        android:background="@drawable/corner_edittext"
        android:inputType="textPersonName"
        android:textColor="#161C42"
        android:textColorHint="#FF6C6868"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/email"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="73dp"
        android:ems="10"
        android:background="@drawable/corner_edittext"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColor="#161C42"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="265dp"
        android:layout_height="39dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="6dp"
        android:ems="10"
        android:background="@drawable/corner_edittext"
        android:hint="Mật khẩu"
        android:inputType="textPersonName"
        android:password="true"
        android:textColor="#161C42"
        app:layout_constraintBottom_toTopOf="@+id/confirmpwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirmpwd"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPersonName"
        android:password="true"
        android:background="@drawable/corner_edittext"
        android:textColor="#161C42"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Giới tính"
        android:inputType="textPersonName"
        android:textColor="#161C42"
        android:textColorHint="#FF6C6868"
        android:background="@drawable/corner_edittext"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="SĐT"
        android:background="@drawable/corner_edittext"
        android:inputType="textPersonName"
        android:phoneNumber="true"
        android:textColor="#161C42"
        android:textColorHint="#FF6C6868"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gender"
        app:layout_constraintTop_toBottomOf="@+id/confirmpwd"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/address"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="Địa chỉ"
        android:background="@drawable/corner_edittext"
        android:inputType="textPersonName"
        android:textColor="#161C42"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="131dp"
        android:text="Đồng ý với các điều khoản"
        android:textColor="#0B0D17"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="84dp"
        android:text="Đăng ký"
        app:backgroundTint="#E61A1A"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="139dp"
        android:background="#FFFFFF"
        android:text="Designed by Mai Huong"
        android:textColor="#887E7E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerbtn"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>